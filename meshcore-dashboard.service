[Unit]
Description=MeshCore Repeater Dashboard
After=network.target

[Service]
Type=simple
User=meshcore
WorkingDirectory=/home/meshcore/meshcore-dashboard
ExecStart=/home/meshcore/meshcore-dashboard/venv/bin/uvicorn app:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
